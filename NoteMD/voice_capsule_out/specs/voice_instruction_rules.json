{
  "_note": "Voice Instruction Rules - defines how GPT should shape spoken tone, speed, and emotion when generating voice output.",
  "version": "1.0",
  "rules": {
    "intonation": {
      "default": "neutral",
      "question": "rise",
      "exclamation": "high",
      "statement": "flat"
    },
    "speed": {
      "default": 1.0,
      "slow": 0.85,
      "fast": 1.15
    },
    "emotion_control": {
      "soft": {
        "pitch_shift": -1.0,
        "volume_factor": 0.8
      },
      "energetic": {
        "pitch_shift": 1.5,
        "volume_factor": 1.3
      },
      "calm": {
        "pitch_shift": -0.5,
        "volume_factor": 0.9
      }
    },
    "pause_timing": {
      "comma": 0.3,
      "period": 0.6,
      "paragraph": 1.2
    }
  }
}